<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    
    
    <RelativeLayout
        android:id="@+id/action_detail_onh_relayout_top"
        android:layout_alignParentTop="true"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/top_bg" >
	
	    <FrameLayout
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <ImageButton
	        	android:id="@+id/action_detail_onh_back_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/main_frame_dynamic_details_top_return" 
	            />
	        
	     </FrameLayout>
	
	     <TextView
	     	android:id="@+id/actionHome_onh_textview_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="活动详情-在线求助"
	        android:textColor="#FFFFFFFF"
	        android:textSize="@dimen/text_size_medium"
	        android:clickable="true"/>
	        
	
	     <FrameLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" >
	
	        <ImageButton
	        	android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/top_btn_selector" />
	            
	      </FrameLayout>
	        
	</RelativeLayout>
 
    
    <ScrollView 
        android:id="@+id/action_detail_onh_scroll"
        android:layout_below="@+id/action_detail_onh_relayout_top"
        android:layout_above="@+id/action_detail_onh_relayout_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="vertical"  
	    android:fadingEdge="vertical"
        >
        
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:scrollbarStyle="outsideInset" 
		    android:background="#f2f2f2"
		    android:orientation="vertical"
		    android:scrollbars="vertical" >
	        
            <ImageView 
        	    android:id="@+id/action_detail_onh_image"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
        		/>
            
            <ImageView 
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dp"
			    android:background="@drawable/action_detail_onlinehelp_transline"
                />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/action_detail_onlinehelp_attribute_bg"
	        android:layout_marginLeft="5dp"
        	>
        
        	
        
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:gravity="center_vertical"
        	    android:paddingLeft="15dp"
        	    android:paddingTop="10dp"
        	    >
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_title"
        	        android:layout_width="fill_parent"
        	        android:layout_height="wrap_content"
        	        android:text="过期怎么办"
        	        android:textSize="@dimen/text_size_medium"
        	        android:textColor="#444444"
        	        />
        	    
        	    
        	    
        	</LinearLayout>
        	
        	
        	
        	
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:gravity="center_vertical"
        	    android:paddingLeft="15dp"
        	    android:paddingTop="10dp"
        	    android:paddingBottom="10dp"
        	    >
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_status"
        	        android:layout_width="fill_parent"
        	        android:layout_height="wrap_content"
        	        android:text="进行中"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="left"
        	        android:textColor="#e8f6fd"
        	        />
        	    
        	    
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingLeft="15dp"
        	    android:paddingBottom="10dp"
        	    >
        	    
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="开始时间:"
        	        android:textSize="@dimen/text_size_micro"
        	        android:gravity="right"
        	        android:textColor="#777777"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_time_start"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textSize="@dimen/text_size_micro"
        	        android:textColor="#777777"
        	        android:text="2013-12-13"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingBottom="10dp"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="结束时间:"
        	        android:textSize="@dimen/text_size_micro"
        	        android:gravity="right"
        	        android:textColor="#777777"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_time_end"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#777777"
        	        android:textSize="@dimen/text_size_micro"
        	        android:text="2013-12-13"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingBottom="10dp"
        	    >
        	    
        	    <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:layout_weight="1"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="发起人:"
        	        android:textSize="@dimen/text_size_micro"
        	        android:gravity="right"
        	        android:textColor="#777777"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_writer"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#777777"
        	        android:textSize="@dimen/text_size_micro"
        	        android:text="葛涛"
        	        />
        	    
        	</LinearLayout>
        	
        	    <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:layout_weight="1"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="奖励类型:"
        	        android:textSize="@dimen/text_size_micro"
        	        android:gravity="right"
        	        android:textColor="#777777"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_onh_award"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#eb4666"
        	        android:textSize="@dimen/text_size_micro"
        	        android:text="勋章"
        	        />
        	    
        	</LinearLayout>
        	    
        	</LinearLayout>
        	
        
    	</LinearLayout>
    	
	    <ImageView 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/action_detail_onh_line"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="8dp"
	        />
    	
	    <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:orientation="vertical"
        	>
        	
	        <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
	            <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:text="问题描述："
        	        android:textSize="@dimen/text_size_nomal"
        	        android:layout_weight="2"
        	        android:textColor="#444444"
        	        />
	            
        	</LinearLayout>
        	
	        <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:paddingTop="5dp"
        	    >
        	    
	            <TextView 
	                android:id="@+id/action_detail_onh_content"
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textSize="@dimen/text_size_nomal"
        	        android:textColor="#444444"
        	        android:text="大家一起来测试"
        	        />
	            
        	</LinearLayout>
	        
        </LinearLayout>
        
	    <ImageView 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/action_detail_onh_line"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="8dp"
		    android:layout_marginBottom="8dp"
	        />
	    
	    <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
	            <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:text="最新回复："
        	        android:textSize="@dimen/text_size_nomal"
        	        android:layout_weight="2"
        	        android:textColor="#444444"
        	        />
	            
        	</LinearLayout>
        
	    <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="#ffffff"
		    android:layout_marginTop="5dp"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="8dp"
		    android:layout_marginBottom="5dp"
	        >
	        
	        
	        
	        <ListView 
			    android:id="@+id/action_detail_onh_listview"
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
	            android:divider="#00dddddd"
	            android:dividerHeight="2dp"
	            android:fadingEdge="none"
	            android:fadingEdgeLength="0dp"
			    ></ListView>
	        
	    </LinearLayout>
	
	</LinearLayout>
        
    </ScrollView>
    
	<LinearLayout
        android:id="@+id/action_detail_onh_relayout_bottom"
        android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/action_detail_onh_bottombtn_bg" 
	    android:orientation="horizontal"
	    >
        
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="2"
	    	android:layout_gravity="center_vertical"
	        >
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_centerInParent="true"
	    		android:gravity="center_vertical"
	    		android:orientation="horizontal"
	            >
	            
	            <ImageView 
	                android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	                android:background="@drawable/action_detail_onh_bottombtn_comment"
	                android:layout_marginRight="4dp"
	                />
	            
	            <TextView 
	                android:id="@+id/action_detail_onlinehelp_comment"
	                android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:text="回复"
	    			android:textColor="#818181"
	                />
	            
	        </LinearLayout>
	        
	    </RelativeLayout>
	    
	    
	    
        </LinearLayout>
    
</RelativeLayout>




