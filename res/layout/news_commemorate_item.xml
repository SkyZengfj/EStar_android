<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/news_commemorate_item_header_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
             
            <LinearLayout 
                android:id="@+id/news_commemorate_item_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                
                <TextView
                android:id="@+id/news_commemorate_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium" />
                
                <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_commorate_content_arrow"
                />
                
            </LinearLayout>

            

            <TextView
                android:id="@+id/news_commemorate_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/news_commemorate_item_name_layout"
                android:textColor="#eb4865"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/news_commemorate_item_appr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/news_commemorate_item_appr_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <!--  <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cccccc" 
            android:layout_marginRight="5dp"
            android:padding="1dp">-->
            
            

            <TextView
                android:id="@+id/news_commemorate_txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff" />
       <!--   </FrameLayout>-->
    </LinearLayout>

</LinearLayout>