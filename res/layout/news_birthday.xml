<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2" >
    
    <RelativeLayout
        android:id="@+id/news_birth_top_layout"
        android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bg" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_btn_selector" />

                <ImageButton
                    android:id="@+id/news_birthday_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_frame_dynamic_details_top_return" />
            </FrameLayout>

            <TextView
                android:id="@+id/news_birthday_textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:text="生日祝福"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
        
    <ScrollView 
        android:id="@+id/news_birthday_scrollview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/news_birth_top_layout"
        android:layout_above="@+id/news_birthday_tabNavigate"
        >
        
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:padding="5dp"
	        android:background="#f2f2f2"
	        >
        
             <LinearLayout 
	             android:id="@+id/news_birth_container_1"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         >
	        
	    	</LinearLayout>
	    	
            <LinearLayout 
	             android:id="@+id/news_birth_container_2"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:orientation="vertical"
		         android:layout_weight="1"
		         >
	        
	    	</LinearLayout>
	    	
            
             
    	</LinearLayout>
    	
         
        
    </ScrollView>
    
   
    
    <com.mcds.app.android.estar.component.TabNavigateComponent
            android:id="@+id/news_birthday_tabNavigate"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.mcds.app.android.estar.component.TabNavigateComponent>

</RelativeLayout>