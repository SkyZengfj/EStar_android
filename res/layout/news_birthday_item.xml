<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f2f2f2"
    android:padding="5dp"
    >
    
    <LinearLayout 
        android:background="#ffffff"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" 
        >
        
        <ImageView 
        android:id="@+id/news_birth_item_img"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="2"
        />
    
    <RelativeLayout 
        android:id="@+id/news_birth_item_to_layout"
        android:layout_weight="2"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        >
        
        <TextView 
            android:id="@+id/news_birth_item_to"
            android:layout_alignParentLeft="true"
            android:text="TO:"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_nomal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            />
        
        <TextView 
            android:layout_toRightOf="@+id/news_birth_item_to"
            android:id="@+id/news_birth_item_name"
            android:text="谢勋"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_nomal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            />
        
        <RelativeLayout 
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#63c0f5"
            >
            
            <TextView 
                android:layout_centerInParent="true"
	            android:id="@+id/news_birth_item_time"
	            android:text="31/12"
	            android:textColor="#ffffff"
	            android:textSize="@dimen/text_size_nomal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:padding="5dp"
	            />
            
        </RelativeLayout>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/news_birth_item_content_layout"
        android:layout_weight="2"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        >
        
        <TextView 
	            android:id="@+id/news_birth_item_content"
	            android:text="生日快乐生日快乐生日快乐生日快乐生日快乐生日快乐生日快乐生日快乐"
	            android:textColor="#777777"
	            android:textSize="@dimen/text_size_nomal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:padding="5dp"
	            />
        
     </RelativeLayout>
     
    <ImageView 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/news_birth_item_line"
        />
    
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        >
        <!--  
        <LinearLayout 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_alignParentRight="true"
	    	android:gravity="center_vertical"
            >
            
            <ImageView 
                android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/news_birth_appraise_bg"
                />
            
            <TextView 
                android:id="@+id/news_birth_appraise_num"
                android:textColor="#eb4865"
                android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="123"
			    android:layout_gravity="center_vertical"
	            android:padding="5dp"
	            android:textSize="@dimen/text_size_nomal"
                />
            
        </LinearLayout>
        -->
        
        <LinearLayout 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_alignParentRight="true"
	    	android:gravity="center_vertical"
            >
            
            <TextView 
                android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="FROM:"
			    android:layout_gravity="center_vertical"
	            android:padding="5dp"
				android:textColor="#333333"
            	android:textSize="@dimen/text_size_nomal"
                />
            
            <TextView 
                android:id="@+id/news_birth_from"
                android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
	            android:padding="5dp"
				android:textColor="#333333"
            	android:textSize="@dimen/text_size_nomal"
                />
            
        </LinearLayout>
        
    </RelativeLayout>
        
    </LinearLayout>
    
    

</LinearLayout>