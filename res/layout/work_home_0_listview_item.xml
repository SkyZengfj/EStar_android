<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/work_home_list_item_background" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="满橙"
        android:textColor="#2C2C2C"
        android:textSize="@dimen/text_size_nomal" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="满橙"
        android:textColor="#37AFEC"
        android:textSize="@dimen/text_size_micro" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="满橙"
        android:textColor="#747474"
        android:textSize="@dimen/text_size_small" />

    <FrameLayout
        android:id="@+id/task_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/content"
        android:layout_marginRight="10dp"
        android:background="@drawable/work_home_list_task_show_background" >

        <TextView
            android:id="@+id/task_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="满橙"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_small" />
    </FrameLayout>

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="满橙1"
        android:textColor="#747474"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/task_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/end_time"
        android:layout_alignParentRight="true"
        android:layout_below="@id/task_background"
        android:layout_marginRight="10dp"
        android:text="满橙"
        android:textColor="#EB4666"
        android:textSize="@dimen/text_size_nomal" />

</RelativeLayout>