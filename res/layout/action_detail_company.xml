<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    
    
    <RelativeLayout
        android:id="@+id/action_detail_comp_relayout_top"
        android:layout_alignParentTop="true"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/top_bg" >
	
	    <FrameLayout
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <ImageButton
	        	android:id="@+id/action_detail_comp_back_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/main_frame_dynamic_details_top_return" 
	            />
	        
	     </FrameLayout>
	
	     <TextView
	     	android:id="@+id/actionHome_comp_textview_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="活动详情-公司"
	        android:textColor="#FFFFFFFF"
	        android:textSize="@dimen/text_size_medium"
	        android:clickable="true"/>
	        
	
	     <FrameLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" >
	
	        <ImageButton
	        	android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/top_btn_selector" />
	            
	      </FrameLayout>
	        
	</RelativeLayout>
 
    
    <ScrollView 
        android:layout_below="@+id/action_detail_comp_relayout_top"
        android:layout_above="@+id/action_detail_comp_linayout_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="vertical"  
	    android:fadingEdge="vertical"
	    android:background="#ffffff"
        >
        
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scrollbarStyle="outsideInset" 
		    android:background="#ffffffff"
		    android:orientation="vertical"
		    android:scrollbars="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="8dp"
        	>
        
        	<ImageView 
        	    android:id="@+id/action_detail_comp_image"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="5dp"
        		/>
        
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:gravity="center_vertical"
        	    >
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_title"
        	        android:paddingLeft="15dp"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:text=""
        	        android:textSize="@dimen/text_size_medium"
        	        android:layout_weight="3"
        	        android:textColor="#0085b2"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_status"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:text=""
        	        android:textSize="@dimen/text_size_nomal"
        	        android:layout_weight="1"
        	        android:gravity="right"
        	        android:textColor="#0085b2"
        	        android:paddingRight="15dp"
        	        />
        	    
        	    
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="开始时间:"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_time_start"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textSize="@dimen/text_size_small"
        	        android:textColor="#999999"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="结束时间:"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_time_end"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#999999"
        	        android:textSize="@dimen/text_size_small"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="发起人:"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_writer"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#999999"
        	        android:textSize="@dimen/text_size_small"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="活动费用:"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_expend"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#999999"
        	        android:textSize="@dimen/text_size_small"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="活动地址:"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_address"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textColor="#999999"
        	        android:textSize="@dimen/text_size_small"
        	        />
        	    
        	</LinearLayout>
        	
        	<LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_joined"
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#ff8000"
        	        android:paddingRight="2dp"
        	        />
        	    
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="已参与"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        android:paddingRight="10dp"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/action_detail_comp_favor"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text=""
        	        android:textColor="#ff8000"
        	        android:textSize="@dimen/text_size_small"
        	        android:paddingRight="2dp"
        	        />
        	    
        	    <TextView 
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="感兴趣"
        	        android:textSize="@dimen/text_size_small"
        	        android:gravity="right"
        	        android:textColor="#999999"
        	        />
        	    
        	</LinearLayout>
        
    	</LinearLayout>
    	
	    <LinearLayout 
	        android:layout_marginTop="15dp"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:orientation="vertical"
        	>
        	
	        <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    >
        	    
	            <TextView 
        	        android:paddingLeft="15dp"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:text="活动介绍"
        	        android:textSize="@dimen/text_size_medium"
        	        android:layout_weight="2"
        	        android:textColor="#0085b2"
        	        />
	            
        	</LinearLayout>
        	
	        <LinearLayout 
        	    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:layout_margin="5dp"
        	    >
        	    
	            <TextView 
	                android:id="@+id/action_detail_comp_content"
        	        android:paddingLeft="15dp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:textSize="@dimen/text_size_medium"
        	        android:textColor="#444444"
        	        />
	            
        	</LinearLayout>
	        
        </LinearLayout>
	
	</LinearLayout>
        
    </ScrollView>
    
    
	
    
    <LinearLayout 
        android:id="@+id/action_detail_comp_linayout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/action_detail_questionair_bottombackground"
        
        >
        
        <TextView 
            android:id="@+id/action_detail_comp_comment_btn"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center"
        	android:text="评论"
        	android:textSize="@dimen/text_size_medium"
        	android:textColor="#ffffff"
        	/>
        
        <TextView 
            android:id="@+id/action_detail_comp_join_btn"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center"
        	android:text="参与"
        	android:textSize="@dimen/text_size_medium"
        	android:textColor="#ffffff"
        	/>
        
        
        
        <LinearLayout 
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:orientation="horizontal"
        	android:layout_gravity="center_vertical"
        	android:gravity="center"
            >
            
            <TextView 
                android:id="@+id/action_detail_comp_photos_btn"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_gravity="center_vertical"
	        	android:gravity="center"
	        	android:text="照片"
	        	android:textSize="@dimen/text_size_medium"
	        	android:textColor="#ffffff"
	        	android:paddingRight="2dp"
        		/>
        
        	<TextView 
        	    android:id="@+id/action_detail_comp_photos_num"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_gravity="center_vertical"
	        	android:gravity="center"
	        	android:textSize="@dimen/text_size_small"
	        	android:textColor="#ffffff"
        		/>
            
        </LinearLayout>
        
        
        
        
        
        
    </LinearLayout>

	
    
</RelativeLayout>


