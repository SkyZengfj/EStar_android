<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提醒"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="15dip"
	        android:layout_height="match_parent">
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <!-- 提到我的 -->
	        <LinearLayout 
	            android:id="@+id/my_btn_remind_at"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dip"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dip"
	                android:layout_gravity="center"
	                android:src="@drawable/my_icon_remind_aboutme"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_gravity="center_vertical"
	                android:textColor="#242424"
	                android:text="提到我的"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"/>
	            <TextView 
	                android:visibility="invisible"
	                android:id="@+id/my_txt_remind_atNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFFFFF"
	                android:background="@drawable/my_icon_remind_circle"
	                android:textSize="@dimen/text_size_large"
	                android:text=""/>
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="5dip"
	                android:src="@drawable/my_icon_go"/>
	        </LinearLayout>
	        <!-- 横线 -->
	        <LinearLayout 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="3dip"
		     android:background="@drawable/my_icon_remind_line">
			 </LinearLayout>
			 
	        <!-- 评论 -->
	        <LinearLayout 
	            android:id="@+id/my_btn_remind_commit"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dip"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="18dip"
	                android:layout_gravity="center"
	                android:src="@drawable/my_icon_remind_more"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_gravity="center_vertical"
	                android:textColor="#242424"
	                android:text="评论"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"/>
	            <TextView 
	                android:id="@+id/my_txt_remind_commitNum"
	                android:visibility="invisible"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFFFFF"
	                android:background="@drawable/my_icon_remind_circle"
	                android:textSize="@dimen/text_size_large"
	                android:text=""/>
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="5dip"
	                android:src="@drawable/my_icon_go"/>
	        </LinearLayout>
	        <!-- 横线 -->
	        <LinearLayout 
	         
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="3dip"
		     android:background="@drawable/my_icon_remind_line">
			 </LinearLayout>
			 
	        <!-- 活动 -->
	        <LinearLayout 
	             android:id="@+id/my_btn_remind_activity"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dip"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dip"
	                android:layout_gravity="center"
	                android:src="@drawable/my_icon_remind_doing"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_gravity="center_vertical"
	                android:textColor="#242424"
	                android:text="活动"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="invisible"
	                android:id="@+id/my_txt_remind_activityNum"
	                android:gravity="center"
	                android:textColor="#FFFFFF"
	                android:background="@drawable/my_icon_remind_circle"
	                android:textSize="@dimen/text_size_large"
	                android:text=""/>
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="5dip"
	                android:src="@drawable/my_icon_go"/>
	        </LinearLayout>
	        <!-- 横线 -->
	        <LinearLayout 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="3dip"
		     android:background="@drawable/my_icon_remind_line">
			</LinearLayout>
			 <!-- 系统 -->
	        <LinearLayout 
	            android:id="@+id/my_btn_remind_system"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dip"
	            android:orientation="horizontal">
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dip"
	                android:layout_gravity="center"
	                android:src="@drawable/my_icon_remind_setting"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_gravity="center_vertical"
	                android:textColor="#242424"
	                android:text="系统"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"/>
	            <TextView 
	                android:visibility="invisible"
	                android:id="@+id/my_txt_remind_systemNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:textColor="#FFFFFF"
	                android:background="@drawable/my_icon_remind_circle"
	                android:textSize="@dimen/text_size_large"
	                android:text=""/>
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="5dip"
	                android:src="@drawable/my_icon_go"/>
	        </LinearLayout>
	        <!-- 横线 -->
	        <LinearLayout 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="3dip"
		     android:background="@drawable/my_icon_remind_line">
			</LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="15dip"
	        android:layout_height="match_parent">
	    </LinearLayout>
	    
	    
	</LinearLayout>


    

</LinearLayout>