<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shopShopcarListItem_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@drawable/list_item_ic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shopShopcarListItem_txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="中国移动 iPhone 5S 4G "
            android:textColor="#ff444444"
            android:textSize="@dimen/text_size_nomal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="数量："
                android:textColor="#ff444444"
                android:textSize="@dimen/text_size_nomal" />

            <EditText
                android:id="@+id/shopShopcarListItem_txtCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_shopcar_listitem_txt_count_bg"
                android:editable="false"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/text_size_nomal" />

            <TextView
                android:id="@+id/shopShopcarListItem_txtIntegral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="积分价：100"
                android:textColor="#ffeb4666"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>